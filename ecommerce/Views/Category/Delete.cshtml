@model ecommerce.Models.Category

@{
    ViewData["Title"] = "Delete";



    Layout = "_DashbourdLayout";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>

<div class="card container" style="width: 18rem;">
    <img class="card-img-top" src="~/img/@Model.ImageUrl" alt="@Model.Name">
    <div class="card-body">
        <h5 class="card-title">@Model.Name Category</h5>
        <p class="card-text">@Model.Description</p>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">Products Number: @(Model.Products?.Count() ?? 0)</li>
    </ul>
    <div class="card-body">
        <form asp-action="DeleteConfirmed" asp-controller="Category" method="post" style="display:inline;">
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-danger" onclick="return confirm('هل أنت متأكد من الحذف؟');">Delete</button>
        </form>
        <a asp-action="GetAll" asp-controller="Category" class="btn btn-secondary">Cancel</a>
    </div>
</div>
